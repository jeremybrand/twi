function main() {

    global $argv;

    switch($argv[1]) {
        case "":
        case "--send": // Not actually used, just FYI (unles you want to)
            echo "    Type your message and end your transmission with EOT character,\n";
            echo "\n";
            echo '    End your message with a newline then period (.) or CTRL-D.' . "\n";
            echo "\n";
            $x = get_stdin_special();
            echo "(eot)\n";
            $d = send_tweet($x);
            $tid = $d['id'];
            if ($tid > 0) {
                $url = 'https://twitter.com/#!/' . $d['user']['id_str'] . '/status/' . $tid;
                print "tweet: " . $url . "\n";
                return(true);
            } else {
                return(false);
            }
        break;

        case "-d":
        case "--delete":
            if (strlen($argv[2]) > 0)
                return delete_tweet($argv[2]);
            else
                return help_delete();
        break;

        case "help_delete":
        case "--help delete":
        case "--help-delete":
            return help_delete();
        break;

        case "help_send":
        case "--help send":
        case "--help-send":
            return help_send();
        break;

        case "help":
        case "-h":
        default:
            return help();
        break;

        case "test":
            print get_stdin_special();
        break;
    }
}

function twirc_help() {
    echo "\n";
    echo '1) You must "Register an app" with your twitter account.' . "\n";
    echo "   http://dev.twitter.com\n";
    echo "\n";
    echo "2) You must fill in your ~/.twirc with authentication from \n";
    echo "   the application credentials created in step 1.\n";
    echo "\n";

    print "    Example format of ~/.twirc:\n";
    print "\n";
    print '<?php' . "\n";
    print <<<EOT
define('TWI_CONSUMER_KEY', 'tS5aLzlksdfSDgserrDFSF');
define('TWI_CONSUMER_SECRET', 'sPCEsdsdfklkj345k6j3lkjsdfkljgsd879sgdsdfh');
define('TWI_OAUTH_TOKEN', '934589736-joEugSfsklsGTHHJSDFKJHsdfkjhsdkjhfkj4333');
define('TWI_OAUTH_SECRET_TOKEN', '6zlksdfsdf798435kljsDSDFSDFkjh4987634jkhsD');

EOT;
    print '?>' . "\n";

    exit(1);

}

require_once('__TWI_PREFIX__/lib/twi/libtwi_cli.php');
if (!file_exists($_ENV['HOME'].'/.twirc')) {
    twirc_help();
} else {
    require_once($_ENV['HOME'].'/.twirc');
}

main();

?>
